                    list.innerHTML = '<div class="text-muted">Không có nhân viên rảnh cho ca này</div>';
                }
                new bootstrap.Modal(document.getElementById('approveModal')).show();
            })
            .catch(err => { 
                console.error('Error loading replacement staff:', err); 
                showToast('error', 'Lỗi tải danh sách nhân viên: ' + err.message); 
            });
    }

