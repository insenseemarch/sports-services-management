@model webapp_mvc.Models.HoSoViewModel
@{
    ViewData["Title"] = "Hồ Sơ Của Tôi";
}

<!-- Main Container -->
<div class="container py-5" style="padding-top: 100px !important;">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            
            <!-- Profile Card -->
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden bg-white">
                
                <!-- Gradient Header -->
                <div class="position-relative" style="height: 160px; background: linear-gradient(135deg, #20bf55 0%, #01baef 100%);">
                    <!-- Decorative Element -->
                    <div class="position-absolute w-100 h-100" 
                         style="background-image: url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMjAiIGhlaWdodD0iMjAiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PGNpcmNsZSBjeD0iMSIgY3k9IjEiIHI9IjEiIGZpbGw9InJnYmEoMjU1LDI1NSwyNTUsMC4xKSIvPjwvc3ZnPg=='); opacity: 0.3;">
                    </div>
                </div>

                <div class="card-body px-4 px-md-5 pb-5 position-relative">
                    
                    <!-- Avatar Section (Overlapping Header) -->
                    <div class="text-center position-absolute start-50 translate-middle-x" style="top: -60px;">
                        <div class="rounded-circle d-flex align-items-center justify-content-center shadow-lg mx-auto bg-white p-1" 
                             style="width: 120px; height: 120px;">
                            <div class="rounded-circle d-flex align-items-center justify-content-center w-100 h-100" 
                                 style="background: #e8f5e9;">
                                <i class="fas fa-user-alt" style="font-size: 50px; color: #4caf50;"></i>
                            </div>
                        </div>
                    </div>

                    <!-- User Name & Badges -->
                    <div style="margin-top: 70px;" class="text-center">
                        <h3 class="fw-bold mb-2">@Model.HoTen</h3>
                        <div class="d-flex justify-content-center gap-2 mb-4">
                            <!-- Cấp bậc Badge -->
                            <span class="badge rounded-pill px-3 py-2 d-flex align-items-center gap-1 border shadow-sm"
                                  style="background-color: #fff9c4; color: #fbc02d; font-size: 0.9rem;">
                                <i class="fas fa-star"></i> @(string.IsNullOrEmpty(Model.TenCB) ? "Thành viên" : Model.TenCB)
                            </span>
                            
                            <!-- Điểm tích lũy Badge -->
                            <span class="badge rounded-pill px-3 py-2 d-flex align-items-center gap-1 border shadow-sm"
                                  style="background-color: #e8f5e9; color: #2e7d32; font-size: 0.9rem;">
                                <i class="fas fa-coins"></i> @Model.DiemTichLuy điểm
                            </span>
                        </div>
                    </div>

                    <hr class="my-4 opacity-25">

                    <!-- Section Title -->
                    <div class="d-flex align-items-center mb-4">
                        <div class="d-flex align-items-center justify-content-center rounded-3 me-3 shadow-sm"
                             style="width: 40px; height: 40px; background: #e8f5e9; color: #2e7d32;">
                            <i class="fas fa-address-card fa-lg"></i>
                        </div>
                        <h5 class="fw-bold m-0 text-dark">Thông Tin Cá Nhân</h5>
                        
                        <!-- Edit Button (Top Right of Section) -->
                        <a asp-action="Edit" class="btn btn-sm btn-outline-primary ms-auto rounded-pill px-3 fw-bold shadow-sm" 
                           style="border: 2px solid;">
                            <i class="fas fa-pen me-2"></i>Chỉnh sửa
                        </a>
                    </div>

                    <!-- Info Grid -->
                    <div class="row g-4">
                        <!-- Họ tên -->
                        <div class="col-md-6">
                            <div class="p-3 rounded-4 h-100" style="background-color: #f8f9fa;">
                                <label class="small text-muted fw-bold text-uppercase ls-1 mb-1">Họ và tên</label>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-user text-secondary me-3"></i>
                                    <span class="fw-bold fs-5 text-dark">@Model.HoTen</span>
                                </div>
                            </div>
                        </div>

                        <!-- Ngày sinh -->
                        <div class="col-md-6">
                            <div class="p-3 rounded-4 h-100" style="background-color: #f8f9fa;">
                                <label class="small text-muted fw-bold text-uppercase ls-1 mb-1">Ngày sinh</label>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-birthday-cake text-secondary me-3"></i>
                                    <span class="fw-bold fs-5 text-dark">
                                        @(Model.NgaySinh.HasValue ? Model.NgaySinh.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- CCCD -->
                        <div class="col-md-6">
                            <div class="p-3 rounded-4 h-100" style="background-color: #f8f9fa;">
                                <label class="small text-muted fw-bold text-uppercase ls-1 mb-1">CCCD / CMND</label>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-id-card text-secondary me-3"></i>
                                    <span class="fw-bold fs-5 text-dark">@(string.IsNullOrEmpty(Model.CCCD) ? "Chưa cập nhật" : Model.CCCD)</span>
                                </div>
                            </div>
                        </div>

                        <!-- Số điện thoại -->
                        <div class="col-md-6">
                            <div class="p-3 rounded-4 h-100" style="background-color: #f8f9fa;">
                                <label class="small text-muted fw-bold text-uppercase ls-1 mb-1">Số điện thoại</label>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-phone-alt text-secondary me-3"></i>
                                    <span class="fw-bold fs-5 text-dark">@Model.SDT</span>
                                </div>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="col-12">
                            <div class="p-3 rounded-4 h-100" style="background-color: #f8f9fa;">
                                <label class="small text-muted fw-bold text-uppercase ls-1 mb-1">Email</label>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-envelope text-secondary me-3"></i>
                                    <span class="fw-bold fs-5 text-dark">@Model.Email</span>
                                </div>
                            </div>
                        </div>
                        
                         <!-- Địa chỉ -->
                        <div class="col-12">
                            <div class="p-3 rounded-4 h-100" style="background-color: #f8f9fa;">
                                <label class="small text-muted fw-bold text-uppercase ls-1 mb-1">Địa chỉ</label>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-map-marker-alt text-secondary me-3"></i>
                                    <span class="fw-bold fs-5 text-dark">@(string.IsNullOrEmpty(Model.DiaChi) ? "Chưa cập nhật" : Model.DiaChi)</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Actions -->
                    <div class="mt-5 text-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-link text-decoration-none text-muted">
                            <i class="fas fa-arrow-left me-2"></i>Quay về trang chủ
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
