@model webapp_mvc.Models.DangKyViewModel
@{
    ViewData["Title"] = "Đăng Ký Tài Khoản";
    Layout = null; // Không dùng layout chính
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ViệtSport</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --color-dark: #0f2b26;
            --color-lime: #cce830;
            --color-lime-hover: #b5d122;
        }
        
        body {
            background: linear-gradient(135deg, var(--color-dark) 0%, #1a4d45 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', sans-serif;
        }

        .register-container {
            max-width: 900px;
            width: 100%;
            margin: 2rem;
        }

        .register-card {
            background: white;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        }

        .register-header {
            background: var(--color-dark);
            color: white;
            padding: 2rem;
            text-align: center;
        }

        .register-header h2 {
            margin: 0;
            font-weight: 700;
            font-size: 2rem;
        }

        .register-header p {
            margin: 0.5rem 0 0 0;
            opacity: 0.8;
        }

        .register-body {
            padding: 2.5rem;
        }

        .form-label {
            font-weight: 600;
            color: var(--color-dark);
            margin-bottom: 0.5rem;
        }

        .form-control, .form-select {
            border-radius: 12px;
            padding: 0.75rem 1rem;
            border: 2px solid #e0e0e0;
            transition: all 0.3s;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--color-lime);
            box-shadow: 0 0 0 3px rgba(204, 232, 48, 0.1);
        }

        .form-check-input:checked {
            background-color: var(--color-lime);
            border-color: var(--color-lime);
        }

        .btn-register {
            background: var(--color-lime);
            color: var(--color-dark);
            font-weight: 700;
            padding: 1rem 2rem;
            border-radius: 12px;
            border: none;
            width: 100%;
            font-size: 1.1rem;
            transition: all 0.3s;
        }

        .btn-register:hover {
            background: var(--color-lime-hover);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(204, 232, 48, 0.3);
        }

        .btn-back {
            background: #f5f5f5;
            color: var(--color-dark);
            font-weight: 600;
            padding: 1rem 2rem;
            border-radius: 12px;
            border: none;
            width: 100%;
            transition: all 0.3s;
        }

        .btn-back:hover {
            background: #e0e0e0;
        }

        .text-danger {
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .upload-area {
            border: 2px dashed #e0e0e0;
            border-radius: 12px;
            padding: 2rem;
            text-align: center;
            transition: all 0.3s;
            cursor: pointer;
        }

        .upload-area:hover {
            border-color: var(--color-lime);
            background: rgba(204, 232, 48, 0.05);
        }

        .upload-area.disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        #preview-image {
            max-width: 200px;
            max-height: 200px;
            margin-top: 1rem;
            border-radius: 12px;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-card">
            <!-- Header -->
            <div class="register-header">
                <h2><i class="fas fa-running me-2"></i>ViệtSport</h2>
                <p>Đăng ký tài khoản để trải nghiệm dịch vụ</p>
            </div>

            <!-- Body -->
            <div class="register-body">
                <form asp-action="DangKy" method="post" enctype="multipart/form-data" id="registerForm">
                    @Html.AntiForgeryToken()
                    
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <strong>Có lỗi xảy ra!</strong> Vui lòng kiểm tra lại thông tin.
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row g-3">
                        <!-- Họ tên -->
                        <div class="col-md-6">
                            <label asp-for="HoTen" class="form-label"></label>
                            <input asp-for="HoTen" class="form-control" placeholder="Nguyễn Văn A" />
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>

                        <!-- Giới tính -->
                        <div class="col-md-6">
                            <label asp-for="GioiTinh" class="form-label"></label>
                            <select asp-for="GioiTinh" class="form-select">
                                <option value="">-- Chọn giới tính --</option>
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                                <option value="Khác">Khác</option>
                            </select>
                        </div>

                        <!-- Ngày sinh -->
                        <div class="col-md-6">
                            <label asp-for="NgaySinh" class="form-label"></label>
                            <input asp-for="NgaySinh" class="form-control" type="date" />
                        </div>

                        <!-- CCCD -->
                        <div class="col-md-6">
                            <label asp-for="CCCD" class="form-label"></label>
                            <input asp-for="CCCD" class="form-control" placeholder="001234567890" />
                        </div>

                        <!-- Số điện thoại -->
                        <div class="col-md-6">
                            <label asp-for="SDT" class="form-label"></label>
                            <input asp-for="SDT" class="form-control" placeholder="0901234567" />
                            <span asp-validation-for="SDT" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="example@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Địa chỉ -->
                        <div class="col-12">
                            <label asp-for="DiaChi" class="form-label"></label>
                            <input asp-for="DiaChi" class="form-control" placeholder="123 Nguyễn Huệ, Quận 1, TP.HCM" />
                        </div>

                        <!-- Tên đăng nhập -->
                        <div class="col-md-6">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username" class="form-control" placeholder="username123" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <!-- Mật khẩu -->
                        <div class="col-md-6">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Nhập lại mật khẩu -->
                        <div class="col-12">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Checkbox HSSV -->
                        <div class="col-12">
                            <div class="form-check">
                                <input asp-for="LaHSSV" class="form-check-input" type="checkbox" id="chkHSSV" />
                                <label class="form-check-label" for="chkHSSV">
                                    <strong>Tôi là học sinh/sinh viên</strong> (Nhận ưu đãi giảm giá 10%)
                                </label>
                            </div>
                        </div>

                        <!-- Upload ảnh thẻ SV -->
                        <div class="col-12" id="uploadSection" style="display: none;">
                            <label class="form-label">Ảnh thẻ sinh viên <span class="text-danger">*</span></label>
                            <div class="upload-area" id="uploadArea">
                                <i class="fas fa-cloud-upload-alt fa-3x text-muted mb-2"></i>
                                <p class="mb-0">Click để chọn ảnh thẻ sinh viên</p>
                                <small class="text-muted">Định dạng: JPG, PNG (Tối đa 5MB)</small>
                                <input asp-for="AnhTheSV" type="file" id="fileInput" accept="image/*" style="display: none;" />
                                <img id="preview-image" style="display: none;" />
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="col-md-6">
                            <button type="submit" class="btn-register">
                                <i class="fas fa-user-plus me-2"></i>Đăng Ký
                            </button>
                        </div>
                        <div class="col-md-6">
                            <a href="@Url.Action("DangNhap", "TaiKhoan")" class="btn btn-back">
                                <i class="fas fa-arrow-left me-2"></i>Quay Lại
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle upload section khi tick HSSV
        document.getElementById('chkHSSV').addEventListener('change', function() {
            const uploadSection = document.getElementById('uploadSection');
            uploadSection.style.display = this.checked ? 'block' : 'none';
        });

        // Handle file upload
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');
        const previewImage = document.getElementById('preview-image');

        uploadArea.addEventListener('click', () => fileInput.click());

        fileInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    previewImage.src = e.target.result;
                    previewImage.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
</body>
</html>
