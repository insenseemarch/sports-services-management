@model webapp_mvc.Models.DangNhapViewModel
@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ViệtSport</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --color-dark: #0f2b26;
            --color-lime: #cce830;
            --color-lime-hover: #b5d122;
        }
        
        body {
            background: linear-gradient(135deg, var(--color-dark) 0%, #1a4d45 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', sans-serif;
        }

        .login-container {
            max-width: 450px;
            width: 100%;
            margin: 2rem;
        }

        .login-card {
            background: white;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        }

        .login-header {
            background: var(--color-dark);
            color: white;
            padding: 3rem 2rem;
            text-align: center;
        }

        .login-header .logo {
            width: 80px;
            height: 80px;
            background: var(--color-lime);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 2.5rem;
            color: var(--color-dark);
        }

        .login-header h2 {
            margin: 0;
            font-weight: 700;
            font-size: 2rem;
        }

        .login-header p {
            margin: 0.5rem 0 0 0;
            opacity: 0.8;
        }

        .login-body {
            padding: 2.5rem;
        }

        .form-label {
            font-weight: 600;
            color: var(--color-dark);
            margin-bottom: 0.5rem;
        }

        .form-control {
            border-radius: 12px;
            padding: 0.75rem 1rem;
            border: 2px solid #e0e0e0;
            transition: all 0.3s;
        }

        .form-control:focus {
            border-color: var(--color-lime);
            box-shadow: 0 0 0 3px rgba(204, 232, 48, 0.1);
        }

        .btn-login {
            background: var(--color-lime);
            color: var(--color-dark);
            font-weight: 700;
            padding: 1rem 2rem;
            border-radius: 12px;
            border: none;
            width: 100%;
            font-size: 1.1rem;
            transition: all 0.3s;
        }

        .btn-login:hover {
            background: var(--color-lime-hover);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(204, 232, 48, 0.3);
        }

        .divider {
            text-align: center;
            margin: 1.5rem 0;
            position: relative;
        }

        .divider::before {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            width: 100%;
            height: 1px;
            background: #e0e0e0;
        }

        .divider span {
            background: white;
            padding: 0 1rem;
            position: relative;
            color: #999;
        }

        .btn-register-link {
            background: #f5f5f5;
            color: var(--color-dark);
            font-weight: 600;
            padding: 1rem 2rem;
            border-radius: 12px;
            border: none;
            width: 100%;
            text-decoration: none;
            display: block;
            text-align: center;
            transition: all 0.3s;
        }

        .btn-register-link:hover {
            background: #e0e0e0;
            color: var(--color-dark);
        }

        .text-danger {
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .back-home {
            text-align: center;
            margin-top: 1.5rem;
        }

        .back-home a {
            color: white;
            text-decoration: none;
            font-weight: 600;
        }

        .back-home a:hover {
            color: var(--color-lime);
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <!-- Header -->
            <div class="login-header">
                <div class="logo">
                    <i class="fas fa-running"></i>
                </div>
                <h2>ViệtSport</h2>
                <p>Đăng nhập để tiếp tục</p>
            </div>

            <!-- Body -->
            <div class="login-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form asp-action="DangNhap" method="post">
                    @Html.AntiForgeryToken()
                    
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">
                            <i class="fas fa-user me-2"></i>Tên đăng nhập
                        </label>
                        <input asp-for="Username" class="form-control" placeholder="Nhập tên đăng nhập" autofocus />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">
                            <i class="fas fa-lock me-2"></i>Mật khẩu
                        </label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Nhập mật khẩu" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                        <label asp-for="RememberMe" class="form-check-label">
                            Ghi nhớ đăng nhập
                        </label>
                    </div>

                    <button type="button" class="btn-login" onclick="handleLogin(event)">
                        <i class="fas fa-sign-in-alt me-2"></i>Đăng Nhập
                    </button>
                </form>

                <div class="divider">
                    <span>hoặc</span>
                </div>

                <a href="@Url.Action("DangKy", "TaiKhoan")" class="btn-register-link">
                    <i class="fas fa-user-plus me-2"></i>Đăng Ký Tài Khoản Mới
                </a>
            </div>
        </div>

        <div class="back-home">
            <a href="@Url.Action("Index", "Home")">
                <i class="fas fa-home me-2"></i>Quay về trang chủ
            </a>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        function handleLogin(event) {
            event.preventDefault();
            
            const form = event.target.closest('form');
            const formData = new FormData(form);
            
            fetch('@Url.Action("DangNhap", "TaiKhoan")', {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                                console.log('Login response:', data);
                if (data.success) {
                                        console.log('Redirect URL:', data.redirectUrl);
                    if (data.redirectUrl) {
                        window.location.href = data.redirectUrl;
                    } else {
                        window.location.href = '@Url.Action("Index", "Home")';
                    }
                } else {
                    alert('Lỗi: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Có lỗi xảy ra!');
            });
        }
    </script>
</body>
</html>
