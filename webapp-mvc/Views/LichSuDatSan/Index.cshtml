                </style>
            `;
            document.getElementById('actionZone').innerHTML = html;
        }

        // Helper: Custom Popup (Updated)
        function showPopupJS(message, type = 'success') {
            var color, bgInner, icon, textColor;
            
            if (type === 'success') {
                color = '#28a745'; 
                bgInner = 'rgba(230, 255, 230, 0.98)';
                icon = 'fa-check-circle';
                textColor = 'text-success';
            } else { // Warning
                color = '#ffc107'; 
                bgInner = 'rgba(255, 253, 230, 0.98)';
                icon = 'fa-exclamation-triangle';
                textColor = 'text-warning'; // Will override styling
            }

            var closeBtn = '';
            if (type !== 'success') {
                closeBtn = `<div class="position-absolute top-0 end-0 p-2 px-3" onclick="$('#customPopupJS').remove(); event.stopPropagation();" style="cursor: pointer;">
                                <i class="fas fa-times text-muted hover-scale"></i>
                            </div>`;
            }

            var customStyle = type !== 'success' ? 'color: #856404 !important;' : ''; 
            var iconStyle = type !== 'success' ? 'color: #ffc107 !important;' : '';

            var html = `
                <div id="customPopupJS" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; 
                            background: rgba(0, 0, 0, 0.15); backdrop-filter: blur(1px);
                            z-index: 1080; border-radius: 15px;
                            display: flex; justify-content: center; align-items: center;"
                            ${type === 'success' ? '' : 'onclick="$(\'#customPopupJS\').remove()"'} >
                        <div style="background: ${bgInner}; 
                                    border: 1px solid ${color}; 
                                    border-radius: 12px; 
                                    padding: 30px 40px; 
                                    text-align: center; 
                                    box-shadow: 0 10px 40px rgba(0,0,0,0.2); 
                                    min-width: 300px;
                                    max-width: 80%;
                                    position: relative;
                                    cursor: default;
                                    animation: popIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);">
                        ${closeBtn}
                        <i class="fas ${icon} fa-3x ${textColor} mb-3" style="${iconStyle}"></i>
                        <h5 class="fw-bold ${textColor} m-0" style="${customStyle}">${message}</h5>
                        </div>
                </div>
                <style>
                    @@keyframes popIn { from { opacity: 0; transform: scale(0.8); } to { opacity: 1; transform: scale(1); } }
                    .hover-scale:hover { transform: scale(1.2); color: #333 !important; }
                </style>
            `;
            
            $('#customPopupJS').remove();
            $('#detailModal .modal-content').append(html);
            
            if(type === 'success') {
                setTimeout(function() { 
                    $('#customPopupJS').fadeOut(200, function(){ 
                        $(this).remove(); 
                        location.reload(); 
                    }); 
                }, 1500);
            }
        }

        function submitChange(id) {
            var date = $('#fixedDate').val();
            var start = $('#newStart').val();
            var end = $('#newEnd').val();
            
            // Use warning type for validation
            if(!start || !end) { showPopupJS('Vui lòng chọn đủ giờ bắt đầu và kết thúc!', 'warning'); return; }

            $.post('/LichSuDatSan/DoiSan', { maDatSan: id, ngayMoi: date, gioBatDauMoi: start, gioKetThucMoi: end }, function(res) {
                if(res.success) {
                     showPopupJS('Đổi giờ thành công!', 'success');
                } else {
                    // Use warning type for server errors
                    showPopupJS(res.message, 'warning');
                }
            }).fail(function() {
                showPopupJS('Lỗi kết nối đến server!', 'warning');
            });
        }
        
        function resetActions() {
            location.reload(); 
        }
    </script>

