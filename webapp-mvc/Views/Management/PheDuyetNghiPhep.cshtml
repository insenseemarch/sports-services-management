    async function confirmApprove() {
        const replacement = document.querySelector('input[name="replacement"]:checked');
        const maNguoiThay = replacement ? replacement.value : '';
        
        console.log('Confirming approval with replacement:', maNguoiThay);
        
        try {
            const formData = new URLSearchParams();
            formData.append('maDon', currentLeaveId);
            if (maNguoiThay) {
                formData.append('nguoiThayThe', maNguoiThay);
            }
            
            const res = await fetch('@Url.Action("DuyetDon","Management")', {
                method: 'POST', 
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: formData.toString()
            });
            
            const payload = await res.json();
            console.log('Approval response:', payload);
            
            if (!payload.success) {
                throw new Error(payload.message || 'Lỗi phê duyệt');
            }
            
            showToast(payload.success ? 'success' : 'error', payload.message);
            location.reload();
        } catch (err) {
            console.error('Approval error:', err);
            alert('Lỗi: ' + err.message);
        }
    }

