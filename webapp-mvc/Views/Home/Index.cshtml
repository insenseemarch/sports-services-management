@model webapp_mvc.Models.HomeViewModel
@{
    ViewData["Title"] = "Trang Chủ";
}

<!-- HERO SECTION - Local Stadium Background -->
<div class="position-relative mb-5" style="height: 100vh; min-height: 700px; overflow: hidden;">
    <!-- Background Image: User Uploaded Stadium -->
    <img src="@Url.Content("~/images/hero_bg.jpg")" 
         class="w-100 h-100" style="object-fit: cover;" alt="Stadium Background">
    
    <!-- Dark Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(to right, rgba(0,0,0,0.5), rgba(0,0,0,0.2));"></div>
    
    <!-- Content Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 d-flex flex-column">
        
        <!-- Main Content -->
        <div class="container-fluid px-5 d-flex align-items-center flex-grow-1 justify-content-center text-center">
            <div class="row w-100 justify-content-center">
                <div class="col-lg-10">
                    <h1 class="display-1 fw-bold text-white mb-4" style="line-height: 1.1; text-transform: uppercase; letter-spacing: -1px; text-shadow: 0 4px 6px rgba(0,0,0,0.3);">
                        KHỞI ĐẦU ĐAM MÊ<br>
                        <span style="color: var(--color-lime);">THỂ THAO CỦA BẠN</span>
                    </h1>
                    <p class="text-white fs-5 mb-5 mx-auto" style="max-width: 800px; opacity: 0.9;">
                        Khám phá các sân thể thao hàng đầu, thiết bị chất lượng cao được thiết kế cho nhà vô địch. <br class="d-none d-lg-block">
                        Chúng tôi có mọi thứ bạn cần để nâng tầm trò chơi của mình.
                    </p>
                    <a href="@Url.Action("Index", "DatSan")" class="btn btn-lg rounded-pill px-5 py-3 fw-bold shadow-lg hover-scale" 
                       style="background: var(--color-lime); color: var(--color-dark); border: none; font-size: 1.1rem;">
                        Khám Phá Ngay
                        <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid px-0">
    <!-- WE OFFER SECTION -->
    <div class="container mb-5 py-5">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3">Chúng tôi cung cấp <span style="color: var(--color-lime-hover);">trải nghiệm thể thao</span> tuyệt vời</h2>
            <p class="text-muted fs-5" style="max-width: 700px; margin: 0 auto;">
                Dành cho mọi cấp độ, từ người mới bắt đầu đến vận động viên chuyên nghiệp. 
                Xem, đặt chỗ và tận hưởng.
            </p>
        </div>

        <div class="row g-4 justify-content-center">
            <!-- Feature 1: Đặt Sân -->
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4 hover-lift" style="border-radius: 24px; transition: all 0.3s ease;">
                    <div class="card-body">
                        <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto mb-4" 
                             style="width: 80px; height: 80px; background: rgba(204, 255, 0, 0.1);">
                            <i class="fas fa-calendar-check fa-2x" style="color: var(--color-lime-hover);"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Đặt Sân Dễ Dàng</h4>
                        <p class="text-muted">Hệ thống đặt lịch trực tuyến nhanh chóng, tiện lợi. Kiểm tra sân trống và đặt ngay tức thì.</p>
                    </div>
                </div>
            </div>
            
            <!-- Feature 2: Đa Dạng Môn -->
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4 hover-lift" style="border-radius: 24px; transition: all 0.3s ease;">
                    <div class="card-body">
                        <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto mb-4" 
                             style="width: 80px; height: 80px; background: rgba(204, 255, 0, 0.1);">
                            <i class="fas fa-volleyball-ball fa-2x" style="color: var(--color-lime-hover);"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Đa Dạng Môn Thể Thao</h4>
                        <p class="text-muted">Tennis, Cầu Lông, Bóng Đá, Bóng Rổ... Chúng tôi có đủ các loại sân cho đam mê của bạn.</p>
                    </div>
                </div>
            </div>

            <!-- Feature 3: Cơ Sở Vật Chất -->
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4 hover-lift" style="border-radius: 24px; transition: all 0.3s ease;">
                    <div class="card-body">
                        <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto mb-4" 
                             style="width: 80px; height: 80px; background: rgba(204, 255, 0, 0.1);">
                            <i class="fas fa-medal fa-2x" style="color: var(--color-lime-hover);"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Cơ Sở Đẳng Cấp</h4>
                        <p class="text-muted">Sân bãi đạt chuẩn thi đấu, hệ thống chiếu sáng hiện đại, phòng thay đồ tiện nghi.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- STATS ROW -->
        <div class="row g-4 mt-5">
            <div class="col-md-3">
                <div class="p-4 rounded-4 bg-light text-center h-100 d-flex flex-column justify-content-center">
                    <h2 class="display-4 fw-bold" style="color: var(--color-dark);">250+</h2>
                    <p class="text-muted mb-0 fw-semibold">Sân Thể Thao</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-4 rounded-4 text-center h-100 d-flex flex-column justify-content-center" style="background: var(--color-lime);">
                    <h2 class="display-4 fw-bold text-dark">@Model.TongKhachHang+</h2>
                    <p class="text-dark mb-0 fw-bold">Khách Hàng Hài Lòng</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-4 rounded-4 bg-light text-center h-100 d-flex flex-column justify-content-center">
                    <h2 class="display-4 fw-bold" style="color: var(--color-dark);">15+</h2>
                    <p class="text-muted mb-0 fw-semibold">Năm Kinh Nghiệm</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-4 rounded-4 bg-dark text-center h-100 d-flex flex-column justify-content-center">
                    <h2 class="display-4 fw-bold text-white">4.9</h2>
                    <div class="mb-2">
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                    </div>
                    <p class="text-white-50 mb-0 fw-semibold">Đánh Giá Trung Bình</p>
                </div>
            </div>
        </div>
    </div>

    <!-- POPULAR COURTS SECTION -->
    @if (Model.DanhSachSanNoiBat != null && Model.DanhSachSanNoiBat.Any())
    {
    <div class="container mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold">Sân Thể Thao <span style="color: var(--color-lime-hover);">Nổi Bật</span></h2>
            <a href="@Url.Action("Index", "DatSan")" class="btn btn-outline-dark rounded-pill px-4">Xem Tất Cả</a>
        </div>

        <div class="row g-4">
            @foreach (var san in Model.DanhSachSanNoiBat)
            {
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm overflow-hidden" style="border-radius: 20px;">
                        <div class="position-relative">
                            <!-- Placeholder image if HinhAnh is empty -->
                            <img src="@(string.IsNullOrEmpty(san.HinhAnh) ? "https://images.unsplash.com/photo-1574629810360-7efbbe195018?q=80&w=600&auto=format&fit=crop" : san.HinhAnh)" 
                                 class="card-img-top" style="height: 250px; object-fit: cover;" alt="@san.TenLoaiSan">
                            <div class="position-absolute top-0 end-0 m-3 bg-white rounded-pill px-3 py-1 fw-bold shadow-sm">
                                <i class="fas fa-star text-warning me-1"></i> 4.8
                            </div>
                        </div>
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge bg-light text-dark border">@san.TenCoSo</span>
                                <small class="text-muted"><i class="fas fa-map-marker-alt me-1"></i>@san.DiaChi</small>
                            </div>
                            <h4 class="card-title fw-bold mb-3">@san.TenLoaiSan</h4>
                            <div class="d-flex justify-content-between align-items-end">
                                <div>
                                    <small class="text-muted d-block">Giá từ</small>
                                    <span class="fs-5 fw-bold" style="color: var(--color-lime-hover);">@san.GiaThue.ToString("N0")đ</span><span class="text-muted">/giờ</span>
                                </div>
                                <a href="@Url.Action("ChiTiet", "DatSan", new { id = san.MaSan })" class="btn btn-dark rounded-circle d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                                    <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    }

    <!-- TESTIMONIALS SECTION -->
    <div class="container mb-5 py-5 bg-light rounded-5 p-5">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Khách Hàng Nói Gì?</h2>
            <p class="text-muted">Phản hồi từ những người yêu thể thao đã trải nghiệm dịch vụ</p>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="text-center">
                                <img src="https://i.pravatar.cc/150?img=68" class="rounded-circle mb-4 shadow" style="width: 100px; height: 100px; object-fit: cover;" alt="User">
                                <p class="fs-4 fst-italic mb-4">"Sân bãi tuyệt vời, mặt cỏ rất êm. Tôi và nhóm bạn thường xuyên đá bóng ở đây mỗi cuối tuần. Dịch vụ đặt sân online cực kỳ tiện lợi!"</p>
                                <h5 class="fw-bold">Trần Minh Tuấn</h5>
                                <small class="text-muted">Khách hàng thân thiết</small>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="text-center">
                                <img src="https://i.pravatar.cc/150?img=44" class="rounded-circle mb-4 shadow" style="width: 100px; height: 100px; object-fit: cover;" alt="User">
                                <p class="fs-4 fst-italic mb-4">"Không gian thoáng mát, sạch sẽ. Nhân viên phục vụ rất nhiệt tình. Chắc chắn sẽ giới thiệu cho bạn bè."</p>
                                <h5 class="fw-bold">Nguyễn Thị Mai</h5>
                                <small class="text-muted">Thành viên CLB Tennis</small>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon bg-dark rounded-circle" aria-hidden="true"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon bg-dark rounded-circle" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- CONTACT SECTION -->
    <div class="container mb-5">
        <div class="card bg-dark text-white border-0 shadow-lg" style="border-radius: 32px; overflow: hidden;">
            <div class="row g-0">
                <div class="col-md-6 p-5 d-flex flex-column justify-content-center">
                    <h2 class="display-5 fw-bold mb-4">Bạn Cần Hỗ Trợ?</h2>
                    <p class="fs-5 mb-5 text-white-50">Để lại thông tin, đội ngũ tư vấn của chúng tôi sẽ liên hệ với bạn trong vòng 24h.</p>
                    <form>
                        <div class="mb-3">
                            <input type="text" class="form-control form-control-lg bg-white bg-opacity-10 border-0 text-white" placeholder="Họ và tên của bạn" style="backdrop-filter: blur(5px);">
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control form-control-lg bg-white bg-opacity-10 border-0 text-white" placeholder="Địa chỉ Email" style="backdrop-filter: blur(5px);">
                        </div>
                        <button class="btn btn-lg fw-bold w-100" style="background: var(--color-lime); color: var(--color-dark);">Gửi Yêu Cầu</button>
                    </form>
                </div>
                <div class="col-md-6 d-none d-md-block">
                    <img src="https://images.unsplash.com/photo-1541534741688-6078c6bfb5c5?q=80&w=1200&auto=format&fit=crop" class="w-100 h-100" style="object-fit: cover;" alt="Contact">
                </div>
            </div>
        </div>
    </div>
</div>

<!-- GET IN TOUCH SECTION -->
<div class="container mb-5 py-5">
    <div class="row g-5">
        <div class="col-lg-6">
            <h2 class="display-5 fw-bold mb-4">Liên Hệ Với Chúng Tôi!</h2>
            <form class="needs-validation" novalidate>
                <div class="mb-3">
                    <input type="text" class="form-control form-control-sport" placeholder="Họ và tên" required>
                </div>
                <div class="mb-3">
                    <input type="email" class="form-control form-control-sport" placeholder="Email" required>
                </div>
                <div class="mb-3">
                    <input type="tel" class="form-control form-control-sport" placeholder="Số điện thoại" required>
                </div>
                <div class="mb-3">
                    <textarea class="form-control form-control-sport" rows="4" placeholder="Nội dung tin nhắn"></textarea>
                </div>
                <button type="submit" class="btn btn-sport-primary rounded-pill px-5 py-3 w-100">
                    Gửi Tin Nhắn
                </button>
            </form>
        </div>
        <div class="col-lg-6">
            <div class="bg-white rounded-4 p-4 shadow-sm h-100">
                <h5 class="fw-bold mb-4">Thông Tin Liên Hệ</h5>
                <div class="mb-4">
                    <h6 class="fw-bold">Văn Phòng Chính</h6>
                    <p class="text-muted mb-0">123 Nguyễn Huệ, Quận 1, TP.HCM</p>
                </div>
                <div class="mb-4">
                    <h6 class="fw-bold">Email</h6>
                    <p class="text-muted mb-0">contact@vietsport.vn</p>
                </div>
                <div class="mb-4">
                    <h6 class="fw-bold">Điện Thoại</h6>
                    <p class="text-muted mb-0">1900 xxxx</p>
                </div>
                <div>
                    <h6 class="fw-bold mb-3">Theo Dõi Chúng Tôi</h6>
                    <div class="d-flex gap-3">
                        <a href="#" class="btn btn-outline-dark rounded-circle" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="btn btn-outline-dark rounded-circle" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="btn btn-outline-dark rounded-circle" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                            <i class="fab fa-youtube"></i>
                        </a>
                        <a href="#" class="btn btn-outline-dark rounded-circle" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                            <i class="fab fa-twitter"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
