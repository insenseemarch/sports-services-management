    function applySearchFilters() {
        const fromDate = document.getElementById('filterFromDate').value;
        const toDate = document.getElementById('filterToDate').value;
        const selectedFacility = document.getElementById('filterBranch').value;
        const employeeName = document.getElementById('filterEmployee').value.toLowerCase().trim();

        const cards = document.querySelectorAll('.leave-card-wrapper');
        
        cards.forEach(card => {
            let shouldShow = true;

            // Filter by employee name
            if (employeeName) {
                const nameElement = card.querySelector('h5');
                const cardName = nameElement ? nameElement.textContent.toLowerCase() : '';
                if (!cardName.includes(employeeName)) {
                    shouldShow = false;
                }
            }

            // Filter by dates - Use data attributes
            if (shouldShow && (fromDate || toDate)) {
                const tuNgayStr = card.getAttribute('data-tungay'); // dd/MM/yyyy
                if (tuNgayStr) {
                    const tuNgay = parseVietnameseDate(tuNgayStr);
                    if (tuNgay) {
                        if (fromDate) {
                            const from = new Date(fromDate);
                            if (tuNgay < from) shouldShow = false;
                        }
                        if (toDate) {
                            const to = new Date(toDate);
                            if (tuNgay > to) shouldShow = false;
                        }
                    }
                }
            }

            // Filter by facility - Use data attribute
            if (shouldShow && selectedFacility) {
                const cardFacility = card.getAttribute('data-coso');
                if (cardFacility !== selectedFacility) {
                    shouldShow = false;
                }
            }

            card.style.display = shouldShow ? 'block' : 'none';
        });
    }

    function parseVietnameseDate(dateStr) {
        // Parse dd/MM/yyyy format
        const parts = dateStr.split('/');
        if (parts.length === 3) {
            return new Date(parts[2], parts[1] - 1, parts[0]);
        }
        return null;
    }

    function resetSearchFilters() {
        document.getElementById('filterFromDate').value = '';
        document.getElementById('filterToDate').value = '';
        document.getElementById('filterBranch').value = '';
        document.getElementById('filterEmployee').value = '';
        
        // Show all cards
        document.querySelectorAll('.leave-card-wrapper').forEach(card => {
            card.style.display = 'block';
        });
    }
